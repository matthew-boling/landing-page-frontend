# Frontend Environment Configuration
# Copy this file to .env.local and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# For production, use your API Gateway URL:
# VITE_API_BASE_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/prod

# Development Configuration
VITE_APP_NAME="Incident Stakeholder Portal"
VITE_APP_VERSION="1.0.0"

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_REPORTING=true
VITE_ENABLE_DIGEST=true

# Analytics (optional)
VITE_ANALYTICS_ID=
VITE_ANALYTICS_ENABLED=false 